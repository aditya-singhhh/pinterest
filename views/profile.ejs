<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-700 text-white pt-1">
    <form id="upload-form" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="profdets flex flex-col items-center mt-2">
        <div class="relative">
            <span id="upload-profile" class="'w-5 h-5 absolute bottom-0 right-0 rounded-full flex items-center justify-center
            bg-zinc-200">
                <i class="ri-pencil-fill text-zinc-800"></i>
            </span>
            <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage%>" alt="">
            </div>
        </div>
        <h1 class="text-3xl font-semibold mt-5"><%= user.username %></h1>
        <h3 class="text-md">@<%= user.username %></h3>
        <a href="/edit" class="mt-5 px-7 py-2 bg-zinc-600 rounded-full tex-xs font-semibold">
            Edit
        </a>
        <a href="/addpost" class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-5">Add new post</a>
    </div>
    <div class="cards flex flex-wrap gap-10 px-10 mt-10">
        <div>
          <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
            <% if(user.posts.length == 0) {%>
                <img class="w-full h-full object-cover" src="/images/uploads/"" alt="">
                <% } else {%>
                    <a href="/show/posts"><img class="w-full h-full object-cover" src="/images/uploads/<%= user.posts[user.posts.length -1].image %>" alt="">
                        </a>
           <% } %>
          </div>
          <a href="/show/posts" class="text-xl inline-block font-semibold mt-3">Your Pins</a>
          <h5 class="text-sm font-medium opacity-60"><%= user.posts.length %></h5>
        </div>
    </div>
</div>

<script>
    document.querySelector("#upload-profile").addEventListener("click", ()=> {
           document.querySelector("#upload-form input").click();
    }
    )
    
    document.querySelector("#upload-form input").addEventListener("change", ()=>{
        document.querySelector("#upload-form").submit();
    })

</script>
<% include ./partials/footer.ejs %>