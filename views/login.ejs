<% include ./partials/header.ejs %>
 <div class="w-full h-screen flex items-center 
 justify-center bg-[url('https://images.unsplash.com/photo-1604079628040-94301bb21b91?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')]">
 <div class="w-80 h-[80vh] bg-zinc-100 px-4 py-5 rounded-md">
 <div class="mx-10"><img src="/images/logo.svg" alt="logo" class="mx-20 w-[15%]"></div>
 <h1 class="text-center font-semibold text-zinc-700 my-2 text-3xl track-tight capitalize leading-none">Welcome to pinterest</h1>
 <% if(error.length > 0) { %>
    <p class="error text-red-700 my-2 text-center capitalize text-medium"><%= error %>
    </p>
 <% } %> 
 <form action="/login" method="post">
  <label class="my-0 text-zinc-700" for="username">Username</label>
  <input class="border-2 block w-full px-3 py-2 my-2" id="username" type="text" name="username" placeholder="Username">
  <label class=" text-zinc-700" for="password">Password</label>
  <input class="border-2 block w-full px-3 py-2 my-2" id="password" type="password" name="password" placeholder="Password">
  <a class="inline-block mt-2 font-semibold text-zinc-600" href="http://">Forgot Password ?</a>
  <input class="border-2 block w-full px-3 py-2 mt-4 my-2 bg-red-600 tex-white rounded-full" type="submit" value="Login">
  <p class="text-xs font-semibold text-zinc-500 mt-5 text-center">By continuing, you agree to Pinterest's Terms of Service.</p>
  <a class="inline-block mt-3 text-sm font-semibold text-zinc-800 text-center w-full" href="/register">Don't have an account ?</a>
 </form>
 </div>
 </div>







